<view id="shop" wx:if="{{sum>0}}"  wx:for="{{cart[0]}}"  wx:for-item='p_item' wx:for-index='p_index' wx:key="p_index" >
	<view style="padding-bottom:32rpx" class="shp">
		<radio-group value="{{ result }}" bind:change="onChange" style="  margin: 0rpx 30rpx;">
			<radio class="checked" checked="true" color="#C28E90" style="background:rgba(255,255,255,1);">
				<image src="/images/user/img.png" class="home"></image>
				<text> {{p_index}}</text>
			</radio>
		</radio-group>
	</view>
	<view  wx:for="{{p_item}}" wx:for-item='c_item' wx:key="c_index">
		<van-swipe-cell right-width="{{ 65 }}">
			<van-cell-group>
				<view class="shop-item">
					<view class="pd">
						<radio-group bindtap="handleItemChange" data-id="{{c_item.cate_id}}" data-istrue="{{c_item.istrue}}"  data-index="{{index}}"  data-item="{{p_item}}" data-price="{{c_item.productInfo.price}}"  data-num="{{c_item.cart_num}}"> 
							<radio class="checked" checked="{{c_item.istrue}}" color="#C28E90" style="background:rgba(255,255,255,1);"></radio>
						</radio-group>
						
						<view class="img">
							<image src="{{c_item.img}}"></image>
						</view>
						<view class="shuju">
							<view class="left">
								<view class="name">{{c_item.productInfo.store_name}}</view>
								<view class="xh">{{c_item.productInfo.attrInfo.suk}}</view>
							</view>
							<view class="right">
								<view class="price">
									<block>￥</block> {{c_item.productInfo.price}}
								</view>
								<view class="count">
									<view bindtap="handleEdit" data-index="{{index}}" data-id="{{item.id}}" data-operation="{{-1}}" class="buttomOne">
										<view>-</view>
									</view>
									<text class="input">{{c_item.cart_num}}</text>
									<view bindtap="handleEdit" data-index="{{index}}" data-id="{{item.id}}" data-operation="{{1}}" class="buttomTwo">
										<view>+</view>
									</view>
								</view>
							</view>
						</view>
					</view>
				</view>
			</van-cell-group>
			<view slot="right">
				<view class="box_right" bindtap="dele" data-id="{{c_item.id}}" data-index="{{index}}">
					<image src="/images/user/btns.png" style="width:60rpx;height:60rpx"></image>
				</view>
			</view>
		</van-swipe-cell>
	</view>
	<view id="zong">
		<view class="checkAll-item">
			<radio-group bindtap="handleItemAllcheck">
				<radio checked="{{item.istrue}}" color="#C28E90" checked="{{allchecked}}">全选</radio>
			</radio-group>
			<view class="shu"><text>共计:</text><text class="price">￥{{totalPrice}}</text>元</view>
		</view>
		<view class="calculate" hover-class="feedBack" bindtap="navtos" data-totalNum="{{totalNum}}" data-totalPrice="{{totalPrice}}">
			<view class="button">去结算{{totalNum}}</view>
		</view>
	</view>
</view>
