<van-popup show="{{ show }}"   position="bottom" custom-style="height:792rpx ;border-top-left-radius: 25rpx;border-top-right-radius: 25rpx;" bind:close="onClose">
<view class="content">
      <view class="henxian" bindtap="guanbi">
      <view class="henxian-item"></view>
      </view>
<van-transition
  show="{{ showdown }}"
  name="fade-down"
  duration="{{ { enter: 800, leave: 1000 } }}"
  enter-class="van-enter-class"
  enter-active-class="van-enter-active-class"
  leave-active-class="van-leave-active-class"
  leave-to-class="van-leave-to-class"
>
