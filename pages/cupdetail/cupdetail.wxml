<!-- 详情轮播 开始-->
<view id="swiper">
	<swiper class="swiperOne" autoplay interval="2000" circular current indicator-dots>
		<swiper-item wx:for="{{banner}}" wx:key="index">
			<image src="{{item.img}}" class="img1" mode="aspectFill"></image>
		</swiper-item>
	</swiper>
</view>
<!-- 详情轮播 结束-->
<!-- 价格名字开始 -->
<view class="detailText">

	<view class="detailText-item" wx:for="{{text}}" wx:key="index">
		<view class="left">
			<view class="Egname">{{item.Egname}}</view>
			<view class="Chname">{{item.Chname}}</view>
			<view class="Price">￥{{item.Price}}</view>
		</view>
		<view class="right">
			<image src="{{item.img}}"></image>
		</view>
	</view>






</view>
<!-- 价格名字结束 -->
<!-- 评论开始 -->
<view class="pin">
	<view class="All">
		<view class="bar">弥友们怎么说(6120)</view>
		<view class="All-item" wx:for="{{pin}}"  wx:key="index">
			<view class="userInfo">
				<image class="userInfo-tou" src="{{item.tou}}" mode="aspectFill"></image>
				<view class="userInfo-all" > 
					<text class="userInfo-name">{{item.name}}</text>
         <view class="userInfo-pinx">
          <image class="userInfo-pin" src="{{item}}" wx:for="{{item.pinj}}" wx:key="index" mode="aspectFill"></image>
              </view>
				</view>
                           <view style="width: 690rpx;height: 37rpx;"> </view>
        <view class="tui">{{item.tui}}</view>
       <view class="up">
              <image src="{{item}}" wx:for="{{item.up}}" wx:key="index"  bindtap="preview" data-src="{{item}}" mode="aspectFill"></image>
       </view>
			</view>
    </view>
    
	</view>
  	<view class="gop">
	       <view class="goto">点击查看更多评论 >></view>
	</view>
</view>
  <view class="detail">
  <image src=""  mode="widthFix"></image>
  </view>
<!-- 评论结束 -->
<!-- 立即定制开始 -->
<view class="goshop">
<view class="goshop1"><text  bindtap="showPopup">立即定制</text></view>
