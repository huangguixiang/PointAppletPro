/* pages/orderdel/index.wxss */
page {
  height: 100%;
  background: #f5f5f5;
}

.top {
  margin: 30rpx;
  background: #3D365E;
  box-shadow: 0px 7px 10px 0px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  color: #fff;
  padding: 40rpx 30rpx 40rpx 30rpx;
}

.top .text {
  display: flex;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}


.dizhi {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 7px 10px 0px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  margin: 0 30rpx;
  padding: 30rpx;
}

.dz_top {
  display: flex;
  align-items: center;
}

.dz_top view {
  margin-left: 18rpx;
}

.dz_top image {
  width: 26rpx;
  height: 32rpx;
}



.dp {
  margin: 30rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 7px 10px 0px rgba(0, 0, 0, 0.05);
}

.dp_list {
  padding: 30rpx;
  background: #fff;
}

.good_list {
  display: flex;
  align-items: center;
  padding-top: 62rpx;
}

.good_list .goodname {
  width: 80rpx;
  height: 167rpx;
  margin-left: 58rpx;
  margin-right: 62rpx;
}

.home {
  width: 26rpx;
  height: 26rpx;
}

.amout text {
  color: #C28E90;

}

.amout {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order_del {
  margin: 30rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 7px 10px 0px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  padding: 0 30rpx;
}

.order_del>view {
  display: flex;
  align-items: center;
  padding: 26rpx 0px;
  border-bottom: 1px solid #EEEEEE;
  font-size: 24rpx;
}

.btns {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 30rpx;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 77rpx;
}

.btns view {
  font-size: 28rpx;
  padding: 22rpx 25rpx;
  border: 1px solid #EEEEEE;
  margin-left: 20rpx;
}

.btns .pay {
  background: #C28E90;
  color: #fff;
}

.Logistics {
  margin: 30rpx;
  background: #fff;
  padding: 0 30rpx;
  box-shadow: 0px 7px 10px 0px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  margin-bottom: 122rpx;
}

.Logistics>.title {
  display: flex;
  align-items: center;
  padding: 30rpx 0px;
  border-bottom: 1px solid #EEEEEE;
}

.order_xx {
  display: flex;
  padding: 30rpx 0px;
  border-bottom: 1px solid #EEEEEE;
  align-items: center;
  justify-content: space-between;
}

.order_xx view {
  height: 56rpx;
  line-height: 56rpx;
  width: 400rpx;
  background: #EEEEEE;
  border-radius: 5px;
  font-size: 24rpx;
  text-align: center;
  color: #333333;
}