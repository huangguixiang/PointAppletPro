<view>
	<view class="forms">
		<van-field label="收货地址"  bindtap="selectdz"   readonly value="{{ value }}" placeholder="收货地址" border />
		<van-field label="详细地址" value="{{ value }}" placeholder="如街道门牌、房屋信息等" border bind:change="onChange" />
		<van-field label="联系人" value="{{ value }}" placeholder="您的姓名" border bind:change="onChange" />
		<van-field label="手机号" value="{{ value }}" placeholder="配送时联系您的手机号" border bind:change="onChange" />

		<view style="margin-top:30rpx">
			<van-checkbox-group value="{{ result }}" bind:change="onChange">
				<van-cell-group>
					<van-cell title="设为默认地址" value-class="value-class" clickable bind:click="toggle">
						<van-checkbox name="a" />
					</van-cell>
				</van-cell-group>
			</van-checkbox-group>
		</view>
	</view>


	<view class="btns"  >
		<view>保存收货信息</view>
		<view>
			<view><image src="/img/wx.png"></image></view>
			使用微信收货地址
		</view>
	</view>
	<van-popup show="{{ show }}" position="bottom" bind:close="onClose">
		<van-area area-list="{{ areaList }}" bind:confirm="confirm" bind:cancel="onClose" />
	</van-popup>
</view>