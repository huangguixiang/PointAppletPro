/* 导航 */
.nav {
  position: relative;
  width: 750rpx;
  top: -44px;
  height: 340rpx;
}
.nav .out:nth-child(1) {
  padding-left: 35rpx;
}
.nav .out {
  padding-top: 10px;
  display: flex;
  width: 650rpx;
  height: 300rpx;
  flex-wrap: nowrap;
  margin: 0 auto;
  overflow: auto;
  padding-top: 37rpx;
  background: #ffffff;
  box-shadow: 0px 7px 10px 0px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
}
.nav .out .box {
  width: 190rpx;
  height: 287rpx;  
  margin-right: 30rpx;
  text-align: center;
}
.nav .out .box .navImg {
  width: 73rpx;
  height: 151rpx;
  text-align: center;
}

.navImg{
  width: 73rpx;
  height: 151rpx;
}

.nav .out .box .name {
  width: 190rpx;
  height: 37rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  padding: 20rpx 0;
  color: #3d365e;
  line-height: 26rpx;
  text-align: center;
}
.nav .out .box .price {
  width: 190rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #c28e90;
  line-height: 26rpx;
}
.content {
  width: 750rpx;
  height: 924rpx;
  margin-top: -24px;
}
.content image {
  width: 750rpx;
  height: 924rpx;
} 
.prev{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
}

.next{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
}
.next image{
  width: 69rpx;
  height: 69rpx;
}
.prev image{
  width: 69rpx;
  height: 69rpx;
}


